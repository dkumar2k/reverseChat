<body>
<section class="container" style="width:800px;">
    <div class="row">
        <div class="col-sm-12">
            <div style="display:flex;justify-content:space-between;">
                <a href="/chatroom" class="btn btn-default btn-sm" >&lt; Go to Chatroom</a>
                <strong>Dashboard</strong>
                <a href="/logout" class="btn btn-primary btn-sm" >Logout</a>
            </div>
        </div>
    </div>

    <div class="row" >
        <div class="col-sm-12">
            <div id="dashboard" class="well chatroom">
                <table>
                    <tr>
                        <td align="center"><strong>User</strong></td>
                        <td><strong>Message Count</strong></td>
                    </tr>
                    <% for (var i = 0; i < dashboardRecords.length; i++) { %>
                        <tr>
                            <td>
                                <p class='message'>
                                    <img src='<%= dashboardRecords[i].photo %>' alt='Thumbnail'>
                                    <i><%= dashboardRecords[i].name %></i>
                                </p>
                            </td>
                            <td align="center"><%= dashboardRecords[i].messageCount %></td>
                        </tr>
                    <% } %>
                    
