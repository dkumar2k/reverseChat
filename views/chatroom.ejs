<!doctype html>
<html>
<head>
    <title>ReverseChat</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body { padding-top:20px; word-wrap:break-word; }
    </style>
</head>
<body>
<section class="container" style="width:1000px;">
    <div class="row">
        <div class="col-sm-12">
            <a href="/logout" class="btn btn-primary btn-sm" style="float:right;">Logout</a>
        </div>
    </div>

    <div class="row" >
        <div class="col-sm-12">
            <div id="chatroom" class="well" style="border:1px solid grey;margin-top:5px; padding:3px;height:300px; ">
                <div id="chatTextArea">
                </div>
                <div id="feedback">
                </div>
            </div>
        </div>
    </div>
    <div class="row" >
        <div class="col-sm-12">
            <div id="input_zone" class="well" style="margin-top:5px;"> 
                <div style="display:flex;">
                    <input id="message" class="vertical-align" type="text" placeholder="Type here..." style="border:1px solid grey; padding:2px;flex:20;"/>
                    <a id="send_message" href="#" class="btn btn-primary btn-sm" style="float:right;flex:1;">Go</a>
                </div>
            </div>
        </div>
    </div>
    <p style="visibility:hidden;">
        <input id="fbId" type="hidden" value="<%= user.facebook.id %>" />
        <input id="token" type="hidden" value="<%= user.facebook.token %>" />
        <input id="email" type="hidden" value="<%= user.facebook.email %>" />
        <input id="name" type="hidden" value="<%= user.facebook.name %>" />
    </p>

</section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="chat.js"></script>
</body>
</html>
